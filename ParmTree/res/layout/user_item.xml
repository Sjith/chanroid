<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:padding="5dp"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

	<ImageView android:id="@+id/userProfilepic" android:background="@drawable/icon"
	  		android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	<TextView android:id="@+id/userNickname" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="닉네임" android:textSize="16sp" android:layout_toRightOf="@id/userProfilepic"/>
	<TextView android:id="@+id/userIntroduce" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="소개글" android:textSize="20sp" android:layout_toRightOf="@id/userProfilepic" android:layout_below="@id/userNickname"/>
	<TextView android:id="@+id/userSimpleinfo" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="성별/나이" android:textSize="12sp" android:layout_alignParentRight="true"/>
	
</RelativeLayout>
