<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout android:layout_width="match_parent"
						android:gravity="center_vertical" android:layout_height="wrap_content"
						android:background="@drawable/bg_detail">

						<CheckedTextView android:layout_width="wrap_content"
									android:id="@+id/msglistcheckall" android:layout_height="wrap_content"
									android:background="@drawable/btn_mess_allcheck"></CheckedTextView>
									
						<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/dot_detail"></ImageView>
									
						<Button android:layout_width="wrap_content" android:id="@+id/msglistdelete"
									android:layout_height="wrap_content"
									android:onClick="onClick" android:background="@drawable/btn_mess_delete"></Button>

			</LinearLayout>

			<FrameLayout android:layout_height="match_parent"
						android:layout_width="match_parent">
						<ListView android:layout_height="wrap_content" android:cacheColorHint="#ffffff"
									android:id="@+id/msglist" android:layout_width="match_parent"></ListView>
						<ProgressBar android:layout_height="wrap_content"
									android:layout_gravity="center" android:id="@+id/msglistprogress"
									android:layout_width="wrap_content" style="?android:attr/progressBarStyleLarge"></ProgressBar>
			</FrameLayout>

</LinearLayout>
