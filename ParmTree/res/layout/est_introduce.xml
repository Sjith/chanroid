<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="match_parent"
			android:layout_height="match_parent">

			<RelativeLayout android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:id="@+id/estintroducetop">

						<ImageView android:id="@+id/esticon"
									android:layout_width="wrap_content" android:layout_height="wrap_content"
									android:src="@drawable/icon" android:scaleType="fitXY"></ImageView>
						<TextView android:id="@+id/estname" android:layout_width="wrap_content"
									android:layout_height="wrap_content" android:text="업체명" android:textColor="#000000"
									android:textSize="24sp" android:layout_toRightOf="@id/esticon"></TextView>
						<TextView android:id="@+id/estlocation"
									android:layout_width="wrap_content" android:gravity="bottom" android:textColor="#000000"
									android:layout_height="wrap_content" android:text="부산 어디 지하1층"
									android:layout_toRightOf="@id/esticon" android:layout_below="@id/estname"></TextView>



						<ImageView android:layout_width="wrap_content"
									android:id="@+id/estkindpic" android:src="@drawable/btn_food"
									android:layout_height="wrap_content" android:layout_above="@+id/estlocation"
									android:layout_toRightOf="@+id/estname"></ImageView>
						<ImageView android:layout_width="wrap_content"
									android:id="@+id/estpremipic" android:src="@drawable/btn_premium"
									android:layout_height="wrap_content" android:layout_above="@+id/estlocation"
									android:layout_toRightOf="@id/estkindpic"></ImageView>

			</RelativeLayout>


			<RelativeLayout android:layout_width="match_parent"
						android:orientation="horizontal" android:id="@+id/estphonelayout"
						android:layout_height="wrap_content">

						<TextView android:id="@+id/estphoneno" android:textColor="#000000"
									android:layout_width="wrap_content" android:layout_height="wrap_content"
									android:text="tel : 000-000-0000"
									android:layout_centerVertical="true"></TextView>
						<Button android:id="@+id/estcallbtn" android:layout_width="wrap_content"
									android:layout_height="wrap_content" android:onClick="onClick"
									android:layout_alignParentRight="true" android:background="@drawable/btn_call"></Button>
						<Button android:id="@+id/estlocationbtn"
									android:layout_width="wrap_content" android:layout_height="wrap_content"
									android:layout_toLeftOf="@id/estcallbtn" android:background="@drawable/btn_search"></Button>

			</RelativeLayout>


			<HorizontalScrollView android:id="@+id/estpicturescroll"
						android:layout_marginRight="20dp" android:layout_marginLeft="20dp"
						android:layout_width="match_parent" android:layout_height="wrap_content">
						<LinearLayout android:id="@+id/estpicturelayout"
									android:layout_width="match_parent" android:layout_height="match_parent"
									android:orientation="horizontal">
									
									
									
									<ImageView android:id="@+id/imageView3"
												android:layout_width="wrap_content" android:src="@drawable/icon"
												android:layout_height="wrap_content"></ImageView>
									<ImageView android:id="@+id/imageView8"
												android:layout_width="wrap_content" android:src="@drawable/icon"
												android:layout_height="wrap_content"></ImageView>
									<ImageView android:id="@+id/imageView10"
												android:layout_width="wrap_content" android:src="@drawable/icon"
												android:layout_height="wrap_content"></ImageView>
									<ImageView android:id="@+id/imageView9"
												android:layout_width="wrap_content" android:src="@drawable/icon"
												android:layout_height="wrap_content"></ImageView>
									<ImageView android:id="@+id/imageView7"
												android:layout_width="wrap_content" android:src="@drawable/icon"
												android:layout_height="wrap_content"></ImageView>
									<ImageView android:id="@+id/imageView4"
												android:layout_width="wrap_content" android:src="@drawable/icon"
												android:layout_height="wrap_content"></ImageView>
									<ImageView android:id="@+id/imageView5"
												android:layout_width="wrap_content" android:src="@drawable/icon"
												android:layout_height="wrap_content"></ImageView>
									<ImageView android:id="@+id/imageView6"
												android:layout_width="wrap_content" android:src="@drawable/icon"
												android:layout_height="wrap_content"></ImageView>



						</LinearLayout>
			</HorizontalScrollView>


			<TextView android:id="@+id/estintroducetext" android:textColor="#000000"
						android:layout_width="match_parent" android:layout_height="wrap_content"
						android:text="내용\n내용\n내용\n내용\n내용\n내용\n내용\n내용\n내용\n내용"
						android:textSize="12sp"></TextView>


			<TextView android:layout_width="match_parent" android:textColor="#000000"
						android:layout_height="wrap_content" android:text="종업원 목록"
						android:textSize="10sp"></TextView>

			<ListView android:layout_height="wrap_content" android:id="@+id/estworkerlist"
						android:layout_width="match_parent"></ListView>


</LinearLayout>
