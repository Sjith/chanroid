<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="match_parent"
			android:background="#efefef" android:layout_height="match_parent">
			<RelativeLayout android:layout_height="wrap_content"
						android:background="@drawable/navi_bg" android:layout_width="match_parent"
						android:id="@+id/relativeLayout1">

						<Button android:background="@drawable/navi_back"
									android:layout_width="wrap_content" android:id="@+id/orderbackbtn"
									android:layout_height="wrap_content"
									android:layout_centerVertical="true" android:onClick="onClick"
									android:layout_alignParentLeft="true"></Button>

						<TextView android:text="주문자 정보" android:textColor="#ffffff"
									android:textAppearance="?android:attr/textAppearanceMedium"
									android:layout_width="wrap_content" android:id="@+id/ordertitle"
									android:layout_height="wrap_content"
									android:layout_centerVertical="true"
									android:layout_centerHorizontal="true"></TextView>


						<Button android:background="@drawable/navi_settings"
									android:layout_width="wrap_content" android:id="@+id/ordersettingbtn"
									android:layout_height="wrap_content"
									android:layout_centerVertical="true" android:onClick="onClick"
									android:layout_alignParentRight="true"></Button>

			</RelativeLayout>

			<ScrollView android:layout_height="match_parent"
						android:layout_width="match_parent">
						<LinearLayout android:layout_width="match_parent"
									android:orientation="vertical" android:layout_height="match_parent"
									android:weightSum="1">
									<ImageView android:layout_width="wrap_content"
												android:layout_gravity="center_horizontal" android:src="@drawable/order_text_01"
												android:id="@+id/imageView4" android:layout_margin="10dp"
												android:layout_height="wrap_content"></ImageView>
									<LinearLayout android:layout_width="match_parent"
												android:layout_marginBottom="10dp" android:orientation="vertical"
												android:background="@drawable/box"
												android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
												android:layout_height="wrap_content">
												<ImageView android:layout_width="wrap_content"
															android:layout_margin="10dp" android:src="@drawable/order_text_02"
															android:id="@+id/imageView1" android:layout_height="wrap_content"></ImageView>
												<RelativeLayout android:layout_width="match_parent"
															android:layout_marginBottom="10dp" android:background="@drawable/box"
															android:layout_height="wrap_content">
															<ImageView android:layout_alignBottom="@+id/oeditText1"
																		android:layout_alignTop="@+id/oeditText1" android:src="@drawable/login_name_btn"
																		android:layout_width="wrap_content" android:id="@+id/oimageView1"
																		android:layout_height="wrap_content"></ImageView>
															<EditText android:background="@drawable/search_box"
																		android:id="@+id/oeditText1" android:layout_height="wrap_content"
																		android:layout_alignParentTop="true"
																		android:layout_marginRight="3dp" android:singleLine="true"
																		android:layout_toRightOf="@+id/oimageView1"
																		android:layout_marginBottom="10dp" android:padding="3dp"
																		android:layout_alignParentRight="true"
																		android:layout_width="wrap_content">
															</EditText>
															<ImageView android:layout_alignBottom="@+id/oeditText2"
																		android:layout_alignTop="@+id/oeditText2" android:src="@drawable/login_call_btn"
																		android:layout_width="wrap_content" android:id="@+id/oimageView2"
																		android:layout_height="wrap_content"></ImageView>
															<EditText android:background="@drawable/search_box"
																		android:layout_alignRight="@+id/oeditText1"
																		android:id="@+id/oeditText2" android:layout_height="wrap_content"
																		android:singleLine="true" android:layout_below="@id/oeditText1"
																		android:padding="3dp" android:layout_width="wrap_content"
																		android:layout_alignLeft="@+id/oeditText1"
																		android:inputType="number"></EditText>
												</RelativeLayout>
												<ImageView android:layout_width="wrap_content"
															android:layout_margin="10dp" android:src="@drawable/order_text_03"
															android:id="@+id/imageView2" android:layout_height="wrap_content"></ImageView>
												<Button android:id="@+id/otimebtn"
															android:layout_gravity="center_horizontal"
															android:layout_marginBottom="5dp" android:background="@drawable/order_time_btn"
															android:layout_height="wrap_content" android:onClick="onClick"
															android:layout_centerHorizontal="true"
															android:layout_width="wrap_content"></Button>
												<Button android:background="@drawable/order_memo_btn"
															android:id="@+id/ordermemobtn" android:layout_gravity="center_horizontal"
															android:layout_width="wrap_content"
															android:layout_height="wrap_content"></Button>
												<LinearLayout android:id="@+id/orderagent"
															android:gravity="center_vertical" android:layout_margin="10dp"
															android:layout_width="match_parent"
															android:layout_height="wrap_content">
															<ImageView android:layout_width="wrap_content"
																		android:layout_marginRight="5dp" android:id="@+id/orderagentpic"
																		android:src="@drawable/icon_70" android:layout_height="wrap_content"></ImageView>
															<LinearLayout android:id="@+id/linearLayout1"
																		android:orientation="vertical"
																		android:layout_marginLeft="7dp" android:layout_height="wrap_content"
																		android:layout_width="match_parent">
																		<TextView android:text="TextView"
																					android:textColor="#000000" android:layout_width="match_parent"
																					android:layout_height="wrap_content"
																					android:textSize="14sp" android:layout_marginLeft="10dp"
																					android:layout_gravity="center_vertical"
																					android:id="@+id/orderagenttext"></TextView>
															</LinearLayout>

												</LinearLayout>
									</LinearLayout>
									<LinearLayout android:layout_width="match_parent"
												android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
												android:orientation="vertical" android:background="@drawable/order_bg"
												android:layout_marginBottom="10dp" android:layout_height="wrap_content">
												<ImageView android:layout_width="wrap_content"
															android:src="@drawable/order_text_04" android:id="@+id/imageView5"
															android:layout_gravity="center_horizontal"
															android:layout_height="wrap_content"
															android:layout_margin="10dp"></ImageView>
												<Button android:background="@drawable/login_event_btn"
															android:layout_marginBottom="20dp" android:id="@+id/obonusbtn"
															android:layout_height="wrap_content"
															android:layout_width="wrap_content" android:onClick="onClick"
															android:layout_alignParentBottom="true"
															android:layout_gravity="center_horizontal"
															android:layout_alignRight="@+id/imageView3"></Button>
									</LinearLayout>
									<LinearLayout android:layout_height="wrap_content"
												android:background="#dfdfdf" android:layout_width="match_parent"
												android:orientation="vertical" android:gravity="center"
												android:layout_gravity="bottom">
												<Button android:background="@drawable/order_btn"
															android:layout_width="wrap_content" android:id="@+id/orderbtn"
															android:layout_margin="10dp" android:layout_height="wrap_content"
															android:onClick="onClick"></Button>
									</LinearLayout>

						</LinearLayout>
			</ScrollView>

</LinearLayout>
