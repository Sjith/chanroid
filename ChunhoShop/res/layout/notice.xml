<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent" android:layout_height="match_parent">
			<ListView android:id="@+id/noticelist"
						android:layout_height="match_parent" android:background="#ffffff"
						android:layout_width="match_parent"></ListView>

			<FrameLayout android:layout_width="match_parent"
						android:visibility="gone" android:id="@+id/noticedesc"
						android:layout_height="match_parent">
			</FrameLayout>

			<ProgressBar android:id="@+id/noticeprogress"
						android:layout_gravity="center" android:visibility="gone"
						style="?android:attr/progressBarStyleLarge" android:layout_width="wrap_content"
						android:layout_height="wrap_content"></ProgressBar>

</FrameLayout>
