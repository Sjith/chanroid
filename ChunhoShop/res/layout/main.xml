<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:id="@+id/main" android:background="@drawable/main_bg"
			android:layout_height="fill_parent">
			<TextView android:text="" android:textAppearance="?android:attr/textAppearanceMedium"
						android:gravity="center" android:layout_width="wrap_content"
						android:id="@+id/mainproductname" android:textColor="#000000"
						android:textStyle="bold" android:layout_height="wrap_content"
						android:layout_below="@+id/mainGallery" android:layout_marginTop="7dp"
						android:layout_centerHorizontal="true"></TextView>

			<LinearLayout android:layout_width="match_parent" android:background="@drawable/main_icon_2_01"
						android:layout_height="wrap_content" android:id="@+id/mainbottom"
						android:layout_alignParentBottom="true">

						<kr.co.chunhoshop.util.RotateView android:onClick="onClick" android:id="@+id/rotateView1" 
									android:layout_width="480px" android:layout_marginBottom="-240px" android:scaleType="matrix" 
									android:src="@drawable/main_icon" android:layout_height="480px" android:layout_alignParentTop="true" 
									android:layout_alignParentLeft="true"></kr.co.chunhoshop.util.RotateView>
						<!-- <Button android:text="" android:id="@+id/button1" android:onClick="onClick"
									android:layout_weight="1" android:layout_width="wrap_content" android:background="@drawable/tab_search"
									android:layout_height="wrap_content"></Button>
						<Button android:text="" android:id="@+id/button2" android:onClick="onClick"
									android:layout_weight="1" android:layout_width="wrap_content" android:background="@drawable/tab_event"
									android:layout_height="wrap_content"></Button>
						<Button android:text="" android:id="@+id/button3" android:onClick="onClick"
									android:layout_weight="1" android:layout_width="wrap_content" android:background="@drawable/tab_zone"
									android:layout_height="wrap_content"></Button>
						<Button android:text="" android:id="@+id/button4" android:onClick="onClick"
									android:layout_weight="1" android:layout_width="wrap_content" android:background="@drawable/tab_cart"
									android:layout_height="wrap_content"></Button>
						<Button android:text="" android:id="@+id/button5" android:onClick="onClick"
									android:layout_weight="1" android:layout_width="wrap_content" android:background="@drawable/tab_call"
									android:layout_height="wrap_content"></Button> -->

			</LinearLayout>

			<Button android:textColor="#ffffff" android:id="@+id/mainbtn" android:text="@string/searchproduct" 
						android:layout_width="180dp" android:gravity="center" android:textSize="26sp" 
						android:background="@drawable/main_bottom_btn" android:onClick="onClick" 
						android:layout_height="90dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"></Button>
			<kr.co.chunhoshop.util.FlowGallery
						android:layout_width="match_parent" android:id="@+id/mainGallery"
						android:layout_height="wrap_content"
						android:layout_alignParentTop="true" android:layout_marginTop="102dp"></kr.co.chunhoshop.util.FlowGallery>
			<Button android:id="@+id/maininfobtn" android:layout_height="wrap_content"
						android:onClick="onClick" android:background="@drawable/main_info_btn"
						android:layout_width="wrap_content" android:layout_alignParentTop="true"
						android:layout_margin="10dp" android:layout_alignParentRight="true"></Button>
			<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" 
						android:src="@drawable/main_text" android:layout_alignParentBottom="true" 
						android:layout_centerHorizontal="true"></ImageView>
			<ProgressBar android:layout_height="wrap_content" android:id="@+id/mainprogress" android:layout_width="wrap_content" style="?android:attr/progressBarStyleLarge" android:layout_centerVertical="true" android:layout_centerHorizontal="true"></ProgressBar>

</RelativeLayout>
