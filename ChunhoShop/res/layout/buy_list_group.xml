<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:background="#efefef"
			android:padding="7dp" android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/buygroupprice"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="TextView" android:layout_marginBottom="3dp"
						android:layout_alignParentTop="true" android:textColor="#000000"
						android:layout_alignParentRight="true"></TextView>
			<TextView android:textColor="#000000"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:id="@+id/buygroupname" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:text="TextView"
						android:layout_alignParentTop="true" android:layout_marginBottom="3dp"
						android:layout_alignParentLeft="true"></TextView>
			<TextView android:id="@+id/buygroupdate"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="TextView" android:textColor="#000000"
						android:layout_below="@+id/buygroupname" android:layout_alignLeft="@+id/buygroupname"
						android:layout_toLeftOf="@+id/buygroupprice"></TextView>
			<ImageView android:src="@drawable/order_btn_01"
						android:layout_marginBottom="5dp" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/buygroupstate"
						android:layout_alignRight="@+id/buygroupprice"
						android:layout_below="@+id/buygroupname"></ImageView>
			<LinearLayout android:layout_width="wrap_content"
						android:gravity="center_vertical" android:layout_marginTop="5dp"
						android:layout_height="wrap_content" android:id="@+id/buygiftbody"
						android:layout_below="@+id/buygroupdate" android:layout_alignLeft="@+id/buygroupdate">
						<TextView android:text="TextView" android:id="@+id/buygifttext"
									android:layout_marginLeft="3dp" android:textColor="#000000"
									android:textSize="13sp" android:layout_width="wrap_content"
									android:layout_height="wrap_content"></TextView>
			</LinearLayout>
</RelativeLayout>
